# production
RAILS_ENV={{ RAILS_ENV }}

# PostgreSQL configuration
PROBE_DOCK_DATABASE_HOST={{ PROBE_DOCK_DATABASE_HOST }}
PROBE_DOCK_DATABASE_NAME={{ PROBE_DOCK_DATABASE_NAME }}
PROBE_DOCK_DATABASE_USERNAME={{ PROBE_DOCK_DATABASE_USERNAME }}
PROBE_DOCK_DATABASE_PASSWORD={{ PROBE_DOCK_DATABASE_PASSWORD }}

# Redis configuration
PROBE_DOCK_REDIS_URL={{ PROBE_DOCK_REDIS_URL }}

# application configuration
PROBE_DOCK_SECRET_KEY_BASE={{ PROBE_DOCK_SECRET_KEY_BASE }}
PROBE_DOCK_JWT_SECRET={{ PROBE_DOCK_JWT_SECRET }}
PROBE_DOCK_LOG_LEVEL={{ PROBE_DOCK_LOG_LEVEL }}

# mail configuration
PROBE_DOCK_MAIL_ADDRESS={{ PROBE_DOCK_MAIL_ADDRESS }}
PROBE_DOCK_MAIL_PORT={{ PROBE_DOCK_MAIL_PORT }}
PROBE_DOCK_MAIL_DOMAIN={{ PROBE_DOCK_MAIL_DOMAIN }}
PROBE_DOCK_MAIL_USERNAME={{ PROBE_DOCK_MAIL_USERNAME }}
