# production
RAILS_ENV={{ RAILS_ENV }}

# PostgreSQL configuration
PROBEDOCK_DATABASE_HOST={{ PROBEDOCK_DATABASE_HOST }}
PROBEDOCK_DATABASE_NAME={{ PROBEDOCK_DATABASE_NAME }}
PROBEDOCK_DATABASE_USERNAME={{ PROBEDOCK_DATABASE_USERNAME }}
PROBEDOCK_DATABASE_PASSWORD={{ PROBEDOCK_DATABASE_PASSWORD }}

# Redis configuration
PROBEDOCK_REDIS_URL={{ PROBEDOCK_REDIS_URL }}

# application configuration
PROBEDOCK_SECRET_KEY_BASE={{ PROBEDOCK_SECRET_KEY_BASE }}
PROBEDOCK_JWT_SECRET={{ PROBEDOCK_JWT_SECRET }}
PROBEDOCK_LOG_LEVEL={{ PROBEDOCK_LOG_LEVEL }}

# mail configuration
PROBEDOCK_MAIL_ADDRESS={{ PROBEDOCK_MAIL_ADDRESS }}
PROBEDOCK_MAIL_PORT={{ PROBEDOCK_MAIL_PORT }}
PROBEDOCK_MAIL_DOMAIN={{ PROBEDOCK_MAIL_DOMAIN }}
PROBEDOCK_MAIL_USERNAME={{ PROBEDOCK_MAIL_USERNAME }}
PROBEDOCK_MAIL_PASSWORD={{ PROBEDOCK_MAIL_PASSWORD }}
PROBEDOCK_MAIL_AUTHENTICATION={{ PROBEDOCK_MAIL_AUTHENTICATION }}
PROBEDOCK_MAIL_FROM={{ PROBEDOCK_MAIL_FROM }}
{{#if PROBEDOCK_MAIL_FROM_NAME}}PROBEDOCK_MAIL_FROM_NAME={{ PROBEDOCK_MAIL_FROM_NAME }}{{/if}}

# API configuration
PROBEDOCK_APP_PROTOCOL={{ PROBEDOCK_APP_PROTOCOL }}
PROBEDOCK_APP_HOST={{ PROBEDOCK_APP_HOST }}
PROBEDOCK_APP_PORT={{ PROBEDOCK_APP_PORT }}

# settings for the unicorn server
{{#if PROBEDOCK_UNICORN_USER}}PROBEDOCK_UNICORN_USER={{ PROBEDOCK_UNICORN_USER }}{{/if}}
{{#if PROBEDOCK_UNICORN_WORKERS}}PROBEDOCK_UNICORN_WORKERS={{ PROBEDOCK_UNICORN_WORKERS }}{{/if}}

# deployment settings
{{#if PROBEDOCK_SSH_HOST}}PROBEDOCK_SSH_HOST={{ PROBEDOCK_SSH_HOST }}{{/if}}
{{#if PROBEDOCK_SSH_PORT}}PROBEDOCK_SSH_PORT={{ PROBEDOCK_SSH_PORT }}{{/if}}
{{#if PROBEDOCK_SSH_USER}}PROBEDOCK_SSH_USER={{ PROBEDOCK_SSH_USER }}{{/if}}
