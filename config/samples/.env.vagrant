# vagrant environment (production-like)
RAILS_ENV=production

# PostgreSQL configuration
PROBEDOCK_DATABASE_HOST=db
PROBEDOCK_DATABASE_NAME=probedock
PROBEDOCK_DATABASE_USERNAME=probedock
PROBEDOCK_DATABASE_PASSWORD=changeme
PROBEDOCK_POSTGRES_PASSWORD=changeme

# Redis configuration
PROBEDOCK_REDIS_URL="cache:6379:0"

# application configuration
PROBEDOCK_SECRET_KEY_BASE=changeme
PROBEDOCK_JWT_SECRET=changeme
PROBEDOCK_LOG_LEVEL=info

# mail configuration
PROBEDOCK_MAIL_ADDRESS=smtp.example.com
PROBEDOCK_MAIL_PORT=587
PROBEDOCK_MAIL_DOMAIN=example.com
PROBEDOCK_MAIL_USERNAME=your-email@example.com
PROBEDOCK_MAIL_PASSWORD=changeme
PROBEDOCK_MAIL_AUTHENTICATION=plain
PROBEDOCK_MAIL_FROM=your-email@example.com
PROBEDOCK_MAIL_FROM_NAME=Your Name

# API configuration
PROBEDOCK_APP_PROTOCOL=http
PROBEDOCK_APP_HOST=localhost
PROBEDOCK_APP_PORT=3000

# optional settings for the unicorn application server
PROBEDOCK_UNICORN_USER=root
PROBEDOCK_UNICORN_WORKERS=3

# optional settings for the nginx web server
PROBEDOCK_NGINX_WORKER_PROCESSES=5
PROBEDOCK_NGINX_WORKER_CONNECTIONS=1024

# optional docker settings
PROBEDOCK_DOCKER_APP_CONTAINERS=3
PROBEDOCK_DOCKER_JOB_CONTAINERS=3
