.org-top-stats.panel.panel-default
  .panel-heading
    help-button
      p Help will be there
    h3.panel-title Top {{ params.top }} of organization DB stats
  .panel-body
    .row ng-if='loading && stats.length === 0'
      .col-md-12
        p Loading...
    .row ng-if='!loading && stats.length === 0'
      .col-md-12
        p.empty No results match the current filters.
    .row.row-labels ng-if='stats.length > 0'
      .col-md-12
        table.table
          thead
            tr
              th.name.db-stats-right-border rowspan=2 Name
              th.projects.text-center.db-stats-right-border rowspan=2 Projects
              th.tests.text-center.db-stats-right-border rowspan=2 Tests
              th.payloads.text-center.db-stats-right-border rowspan=2 Payloads
              th.results.text-center colspan=3 Results
            tr
              th.results-count.text-right Rows
              th.results-prop.text-right %
              th.results-trend.text-center Trend
          tbody
            tr ng-repeat='stat in stats'
              td.name.db-stats-right-border {{ stat | orgName }}
              td.projects.text-right.db-stats-right-border {{ stat.projectsCount | number }}
              td.tests.text-right.db-stats-right-border {{ stat.testsCount | number }}
              td.payloads.text-right.db-stats-right-border {{ stat.payloadsCount | number }}
              td.results-count.text-right {{ stat.resultsCount | number }}
              td.results-prop.text-right {{ stat.resultsProp | number:2 }}%
              td.results-trend.text-center
                sparkline ng-if='stat.resultsTrend' data='stat.resultsTrend'
          tfoot
            tr
              td.name.db-stats-right-border Top total
              td.projects.text-right.db-stats-right-border {{ topStats.projectsCount | number }}
              td.tests.text-right.db-stats-right-border {{ topStats.testsCount | number }}
              td.payloads.text-right.db-stats-right-border {{ topStats.payloadsCount | number }}
              td.results-count.text-right {{ topStats.resultsCount | number }}
              td.results-prop.text-right {{ topStats.resultsProp | number:2 }}%
              td.results-trend.text-center
                sparkline data='topStats.resultsTrend'
            tr
              td.name.db-stats-right-border Total
              td.projects.text-right.db-stats-right-border {{ total.projectsCount | number }}
              td.tests.text-right.db-stats-right-border {{ total.testsCount | number }}
              td.payloads.text-right.db-stats-right-border {{ total.payloadsCount | number }}
              td.results-count.text-right {{ total.resultsCount | number }}
              td.results-prop.text-right 100%
              td.results-trend.text-right
                sparkline data='total.resultsTrend'

