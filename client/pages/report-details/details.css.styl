@import '../../styles/mixins.css.styl'

#report-details
  .progress
    height 20px
    margin-bottom 0
    .progress-bar
      font-size 12px
      line-height 20px
  .no-match
    display none
    margin-bottom 0
  .project-version-labels
    margin-top 1em
    .label
      padding 0.4em 0.6em
      line-height 2.5em
      font-size .9em
  .filters
    margin-top 1em
    form
      margin-bottom 0
  .overview
    margin-top 1em
  .summary
    .avatars
      margin-bottom 1em
      .user-avatar
        margin-left 0.4em
  .health
    a
      cursor pointer
      &.p, &.f, &.i
        display block
        float left
        width 10px
        height 10px
        @media (min-width: 768px)
          width 20px
          height 20px
        margin 0 0 1px 1px
      &.p
        @extend .passedTest
      &.f
        @extend .failedTest
      &.i
        @extend .inactiveTest
    .popover
      .popover-content
        ul
          margin-bottom 0
    .hidePassed
      .p
        display none
    .hideFailed
      .f
        display none
    .hideInactive
      .i
        display none
    .hideExisting
      .et
        display none
    .hideNew
      .nt
        display none
    a.h
      display none
  .results
    margin-bottom 2em
    h3
      margin-bottom 1em
    .progress
      margin-top 1em
    &.hidePassed
      .p
        display none
    &.hideFailed
      .f
        display none
    &.hideInactive
      .i
        display none
    &.hideExisting
      .et
        display none
    &.hideNew
      .nt
        display none
    .result
      &.h, &.tmp-hidden
        display none
      h4
        margin 0
        font-weight bold
      .labels
        margin-top 0.4em
        font-size 1.2em
      .details
        margin-top 1em
        margin-bottom 0
      pre
        margin 1em 0 0 0
        max-height 20em
      a
        color inherit
