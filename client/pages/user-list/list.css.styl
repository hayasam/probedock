@import '../../styles/mixins.css.styl'

#user-list-page
  .filters
    padding 15px 15px 0 15px

  .tab-content
    margin-top 1em
  table
    thead
      tr
        th
          vertical-align middle
    tbody
      tr
        td
          vertical-align middle
          &.avatar
            width 30px
          &.actions
            width 4em
            text-align center

          .active, .inactive
            font-size 1.3em

          .active
            color passed-color
          .inactive
            color failed-color

          p.empty
            margin-bottom 0
