@import '../mixins.css.styl'

large-progress-bar()
  .progress
    height 20px
    margin-bottom 0
    .progress-bar
      font-size 12px
      line-height 20px

#testReportDetails
  large-progress-bar()
  .summary
    .gravatar
      margin 0 0 10px 10px
  .health
    .spinner
      margin-top 10px
    a
      &.p, &.f, &.i
        display block
        float left
        width 10px
        height 10px
        @media (min-width: 768px)
          width 20px
          height 20px
        margin 0 0 1px 1px
      &.p
        @extend .passedTest
      &.f
        @extend .failedTest
      &.i
        @extend .inactiveTest
    .popover
      .popover-content
        ul
          margin-bottom 0
  .results
    margin-bottom 2em
    h3
      margin-bottom 1em

table.reports
  th, td
    &.results
      width 30%
    &.runner
      width 7em
      text-align center
    &.duration
      width 10em
      text-align center
    &.date
      width 16em
      text-align center
  large-progress-bar()
  tbody
    tr
      td
        vertical-align middle
