@import '../mixins.css.styl'

.reportHealthBar
  &.progress
    height 20px
    margin-bottom 0
    .progress-bar
      font-size 12px
      line-height 20px

large-progress-bar()
  .progress
    height 20px
    margin-bottom 0
    .progress-bar
      font-size 12px
      line-height 20px

#test-report
  large-progress-bar()
  .no-match
    display none
    margin-bottom 0
  .project-version-labels
    margin-top 1em
    .label
      float left
      margin-right 0.4em
      padding 0.4em 0.6em
      font-size 1em
  .filters
    margin-top 1em
    form
      margin-bottom 0
  .overview
    margin-top 1em
  .summary
    .avatars
      margin-bottom 1em
      .user-avatar
        margin-left 0.4em
  .health
    a
      cursor pointer
      &.p, &.f, &.i
        display block
        float left
        width 10px
        height 10px
        @media (min-width: 768px)
          width 20px
          height 20px
        margin 0 0 1px 1px
      &.p
        @extend .passedTest
      &.f
        @extend .failedTest
      &.i
        @extend .inactiveTest
    .popover
      .popover-content
        ul
          margin-bottom 0
    .hidePassed
      .p
        display none
    .hideFailed
      .f
        display none
    .hideInactive
      .i
        display none
    .hideExisting
      .et
        display none
    .hideNew
      .nt
        display none
    a.h
      display none
  .results
    margin-bottom 2em
    h3
      margin-bottom 1em
    &.hidePassed
      .p
        display none
    &.hideFailed
      .f
        display none
    &.hideInactive
      .i
        display none
    &.hideExisting
      .et
        display none
    &.hideNew
      .nt
        display none
    .result
      &.h, &.tmp-hidden
        display none
      h4
        margin 0
        font-weight bold
      .labels
        margin-top 0.4em
        font-size 1.2em
        .label
          float left
          margin-top 0.2em
          margin-right 0.4em
          padding 0.4em 0.6em
      .details
        margin-top 1em
        margin-bottom 0
      pre
        margin 1em 0 0 0
        max-height 20em

table.latestReports
  margin-top 1em
  th, td
    &.details
      width 35%
    &.runners
      width 12em
      img
        margin 0 3px
    &.duration
      width 10em
      text-align center
    &.date
      width 16em
      text-align center
  large-progress-bar()
  thead
    tr
      th
        vertical-align middle
        &.results
          button
            margin-left 0.5em
          .text-danger
            font-weight normal
            &.ng-hide-add.ng-hide-add-active,
            &.ng-hide-remove.ng-hide-remove-active
              -webkit-transition all linear 0.5s
              transition all linear 0.5s
            &.ng-hide
              opacity 0
              margin 0 10px
  tbody
    tr
      td
        vertical-align middle
        &.runners
          .name
            margin-left 0.2em
          span
            vertical-align middle
