angular.module('rox', [
  'rox.state',
  'rox.routes',
  'rox.auth',
  'rox.dashboard',
  'rox.projects',
  'rox.reports',
  'rox.format',
  'rox.nav',
  'angularMoment',
  'smart-table',
  'ui.gravatar',
  'infinite-scroll',
  'ui.bootstrap'
])

  // FIXME: ui-bootstrap tooltip animation is broken using angular 1.3
  // upgrade to 1.3.1+ only once fixed: https://github.com/angular-ui/bootstrap/issues/2828

  .constant('version', <%= JSON.dump Rails.application.version %>)
  .constant('environment', <%= JSON.dump Rails.env %>)

  // enable debug log unless in production
  .config(['environment', '$logProvider', function(env, $logProvider) {
    $logProvider.debugEnabled(env !== 'production');
  }])

  .config(['localStorageServiceProvider', function(localStorageServiceProvider) {
    localStorageServiceProvider.setPrefix('rox');
  }])

  .run(['AuthService', function($auth) {
    $auth.checkSignedIn();
  }])

;
