angular.module('probe-dock', [
  'angularMoment',
  'angular-jqcloud',
  'angular-loading-bar',
  'infinite-scroll',
  'ngClipboard',
  'ngSanitize',
  'nvd3ChartDirectives',
  'ngAnimate',
  'smart-table',
  'ui.gravatar',
  'ui.bootstrap',
  'ui.select',
  'probe-dock.auth',
  'probe-dock.dashboard',
  'probe-dock.format',
  'probe-dock.forms',
  'probe-dock.home',
  'probe-dock.nav',
  'probe-dock.orgs',
  'probe-dock.orgs.members',
  'probe-dock.profile',
  'probe-dock.projects',
  'probe-dock.reports',
  'probe-dock.routes',
  'probe-dock.state',
  'probe-dock.users'
])

  // FIXME: ui-bootstrap tooltip animation is broken using angular 1.3
  // upgrade to 1.3.1+ only once fixed: https://github.com/angular-ui/bootstrap/issues/2828

  .constant('version', <%= JSON.dump Rails.application.version %>)
  .constant('environment', <%= JSON.dump Rails.env %>)
  .constant('zeroClipboardFlash', <%= JSON.dump asset_path('zero-clipboard.swf') %>)

  // enable debug log unless in production
  .config(function(environment, $logProvider) {
    $logProvider.debugEnabled(environment !== 'production');
  })

  .config(function(ngClipProvider, zeroClipboardFlash) {
    ngClipProvider.setPath(zeroClipboardFlash);
  })

  .run(function(auth) {
    auth.checkSignedIn();
  })

  .run(function() {
    nv.dev = false; // disable nvd3 graph generation time logs
  })

;
