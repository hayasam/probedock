angular.module('probe-dock', [
  'probe-dock.auth',
  'probe-dock.dashboard',
  'probe-dock.format',
  'probe-dock.forms',
  'probe-dock.nav',
  'probe-dock.profile',
  'probe-dock.projects',
  'probe-dock.reports',
  'probe-dock.routes',
  'probe-dock.state',
  'probe-dock.users',
  'angularMoment',
  'angular-jqcloud',
  'infinite-scroll',
  'ngClipboard',
  'nvd3ChartDirectives',
  //'ngAnimate', // FIXME: include ngAnimate when ui-bootstrap tooltip is fixed (https://github.com/angular-ui/bootstrap/issues/2951)
  'smart-table',
  'ui.gravatar',
  'ui.bootstrap'
])

  // FIXME: ui-bootstrap tooltip animation is broken using angular 1.3
  // upgrade to 1.3.1+ only once fixed: https://github.com/angular-ui/bootstrap/issues/2828

  .constant('version', <%= JSON.dump Rails.application.version %>)
  .constant('environment', <%= JSON.dump Rails.env %>)
  .constant('zeroClipboardFlash', <%= JSON.dump asset_path('zero-clipboard.swf') %>)

  // enable debug log unless in production
  .config(['environment', '$logProvider', function(env, $logProvider) {
    $logProvider.debugEnabled(env !== 'production');
  }])

  .config(['localStorageServiceProvider', function(localStorageServiceProvider) {
    localStorageServiceProvider.setPrefix('probe-dock');
  }])

  .config(['ngClipProvider', 'zeroClipboardFlash', function(ngClipProvider, assetPath) {
    ngClipProvider.setPath(assetPath);
  }])

  .run(['AuthService', function($auth) {
    $auth.checkSignedIn();
  }])

  .run(function() {
    nv.dev = false; // disable nvd3 graph generation time logs
  })

;
