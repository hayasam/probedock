!!!
%html
  %head
    = render :partial => 'layouts/head'
  %body{ data: body_data }
    %a#top{ :name => :top }
    = render :partial => 'layouts/navbar'
    .container.page-container
      - { warning: :warning, success: :success, error: :danger }.each_pair do |key,klass|
        - if flash[key]
          .alert.alert-dismissable.fade.in{ :class => (klass ? "alert-#{klass}" : nil) }
            %button.close{ type: :button, data: { dismiss: :alert }, aria: { hidden: true } } &times;
            %strong= t("flash.#{key}")
            = flash[key]
      = yield
    = render :partial => 'layouts/footer'
