source $HOME/.screenrc

screen -t task 0
stuff "bundle exec guard start\012"
screen -t redis 1
stuff "redis-cli\012"
screen -t db 2
stuff "psql probe-dock\012"
screen -t server 3
stuff "bundle exec rails server\012"
screen -t vim 4
stuff "\${PROJECT_EDITOR-\$EDITOR}\012"
